<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.VerSeriesActivity"
    android:background="@drawable/background_serie"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textTitulo"
        android:layout_width="301dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="60dp"
        android:fontFamily="@font/aclonica"
        android:hint="Titulo"
        android:paddingLeft="20dp"
        android:paddingTop="30dp"
        android:paddingEnd="50dp"
        android:paddingRight="20dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"/>

    <TextView
        android:id="@+id/textTemporada"
        android:layout_width="301dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="60dp"
        android:fontFamily="@font/aclonica"
        android:hint="Temporada"
        android:paddingLeft="30dp"
        android:paddingTop="30dp"
        android:paddingEnd="50dp"
        android:paddingRight="20dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"/>

    <TextView
        android:id="@+id/textEpisodio"
        android:layout_width="301dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="60dp"
        android:fontFamily="@font/aclonica"
        android:hint="Assistir"
        android:paddingLeft="30dp"
        android:paddingTop="30dp"
        android:paddingEnd="50dp"
        android:paddingRight="20dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"/>

    <TextView
        android:id="@+id/textPlataforma"
        android:layout_width="301dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="60dp"
        android:fontFamily="@font/aclonica"
        android:hint="Plataforma"
        android:paddingLeft="30dp"
        android:paddingTop="30dp"
        android:paddingEnd="50dp"
        android:paddingRight="20dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"/>

    <TextView
        android:id="@+id/textUltimoEP"
        android:layout_width="301dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="60dp"
        android:fontFamily="@font/aclonica"
        android:hint="Assistido"
        android:paddingLeft="30dp"
        android:paddingTop="30dp"
        android:paddingEnd="50dp"
        android:paddingRight="20dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"/>

    <TextView
        android:id="@+id/textDiaSemana"
        android:layout_width="301dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="60dp"
        android:fontFamily="@font/aclonica"
        android:hint="Data"
        android:paddingLeft="30dp"
        android:paddingTop="30dp"
        android:paddingEnd="50dp"
        android:paddingRight="20dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"/>

    <Button
        android:id="@+id/btRemoverSerie"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:layout_marginTop="16dp"
        android:textSize="20sp"
        android:background="@drawable/background_button"
        android:text="Remover" />
</LinearLayout>